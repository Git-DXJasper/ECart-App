<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToOutline="true"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:background="@drawable/gradient_sunset">

    <TextView
        android:id="@+id/txt_pid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Product ID:"
        android:layout_margin="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txt_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_pid"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Quantity:"
        android:layout_margin="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txt_unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_qty"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Unit Price:"
        android:layout_margin="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_unit_price"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="amount:"
        android:layout_margin="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txt_pname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_amount"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Product name:"
        android:layout_margin="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_pname"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Description:"
        android:layout_margin="10dp"
        android:textSize="18sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_item_in_od"
        android:layout_width="240dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/txt_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:background="@drawable/shape_round_border"
        android:scaleType="centerCrop"
        android:clipToOutline="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>